@model BaiTapMVC.Models.HangHoaViewModel
@{
    ViewBag.Title = "Thành tiền";
    var vi = new System.Globalization.CultureInfo("vi-VN");
}
<div class="w-75 mx-auto mt-3">

    <h5 class="mb-3">Kết quả chi tiết</h5>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Mã hàng</th>
                <th>Tên hàng</th>
                <th>Loại hàng</th>
                <th>Đơn giá</th>
                <th>Số lượng</th>
                <th>Thành tiền</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.MaHang</td>
                <td>@Model.TenHang</td>
                <td>@Model.LoaiHang</td>
                <td>@Model.DonGia.ToString("n0", vi)</td>
                <td>@Model.SoLuong.ToString("n0", vi)</td>
                <td>@(Model.ThanhTien.ToString("n0", vi)) VNĐ</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-secondary" href="@Url.Action("Nhap","HangHoa")">Nhập lại</a>
</div>
