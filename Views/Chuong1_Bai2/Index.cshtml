@model BaiTapMVC.Models.HoaDonDienViewModel
@{
    ViewBag.Title = "Tính tiền điện";
}
@using (Html.BeginForm("Result", "Chuong1_Bai2", FormMethod.Post, new { @class = "border w-75 mx-auto p-3" }))
{
    @Html.AntiForgeryToken()
    <h4 class="text-center">Tính tiền điện</h4>
    <hr />
    <div class="mb-3">
        @Html.LabelFor(m => m.ChuHo, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.ChuHo, new { @class = "form-control", placeholder = "Tên chủ hộ", required = "required" })
        @Html.ValidationMessageFor(m => m.ChuHo, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        @Html.LabelFor(m => m.ChiSoCu, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.ChiSoCu, new { type = "number", @class = "form-control", placeholder = "kWh", min = "0", step = "1", required = "required" })
    </div>
    <div class="mb-3">
        @Html.LabelFor(m => m.ChiSoMoi, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.ChiSoMoi, new { type = "number", @class = "form-control", placeholder = "kWh", min = "0", step = "1", required = "required" })
    </div>
    <div class="mb-3">
        @Html.LabelFor(m => m.LoaiDien, new { @class = "form-label" })
        @Html.DropDownListFor(m => m.LoaiDien,
            new SelectList(new[]
            {
                new { Value = 0, Text = "Sinh hoạt" },
                new { Value = 1, Text = "Kinh doanh" },
                new { Value = 2, Text = "Sản xuất" }
            }, "Value", "Text", 0),
            "-- Chọn loại điện --",
            new { @class = "form-select", required = "required" })
    </div>
    <div class="form-check mb-3">
        @Html.CheckBoxFor(m => m.UuTien, new { @class = "form-check-input", id = "chkUT" })
        <label class="form-check-label" for="chkUT">Hộ ưu tiên</label>
    </div>
    <button type="submit" class="btn btn-dark w-100">Tính</button>
}
