@{
    ViewBag.Title = "Kết quả";
}

<div class="w-75 mx-auto mt-4">
    @if (!string.IsNullOrEmpty(ViewBag.Error))
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.Error
        </div>
        <a href="@Url.Action("Index", "Chuong1_Bai1")" class="btn btn-secondary mt-2">Quay lại</a>
    }
    else
    {
        <p class="fs-4 border border-2 rounded p-2 mx-auto text-center">
            <strong>Kết quả: </strong> @ViewBag.A @ViewBag.Op @ViewBag.B = @ViewBag.C
        </p>
        <a href="@Url.Action("Index", "Chuong1_Bai1")" class="btn btn-secondary mt-2">Tính lại</a>
    }
</div>
